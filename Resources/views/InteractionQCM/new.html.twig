<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'qcm creation' | trans }}</h3>
    </div>

    <form onsubmit="return check_form('{{ 'nbr_choices' | trans }}', '{{ 'answer_coched' | trans }}', '{{ 'label_empty' | trans }}', '{{ 'point_answers' | trans }}', '{{ 'point_answer' | trans }}', '{{ 'invite_question' | trans }}');"
          action="{{ path('ujm_interactionqcm_create') }}" method="post" {{ form_enctype(form) }}>
        <div class="panel-body">
            {% include "UJMExoBundle:Partial:question.html.twig" %}
        </div>
        <div class="list-group">
            <div class="list-group-item">
                <h4 class="list-group-item-heading">
                    {{ 'response' | trans }}:
                </h4>
                <br>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{ 'points' | trans }}</h3>
                    </div>
                    <div class="panel-body">
                        <div class="form-group row">
                            {{ form_label(form.scoreRightResponse) }}
                            <div class="col-md-9">{{ form_widget(form.scoreRightResponse) }}</div>
                        </div>
                        <div class="form-group row">
                            {{ form_label(form.scoreFalseResponse) }}
                            <div class="col-md-9">{{ form_widget(form.scoreFalseResponse) }}</div>
                        </div>
                        <div class="form-group row">
                            {{ form_label(form.weightResponse) }}
                            <div class="col-md-9">{{ form_widget(form.weightResponse) }}</div>
                        </div>
                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{ 'choice' | trans }}</h3>
                    </div>
                    <div class="panel-body">
                        <div class="form-group row">
                            {{ form_label(form.shuffle) }}
                            <div class="col-md-9">{{ form_widget(form.shuffle) }}</div>
                        </div>
                        {{ form_row(form.typeQCM) }}
                        {{ form_row(form.choices) | replace({"col-md-3": "col-md-12"}) | raw }}
                    </div>
                </div>

                <div style="display: none;">{{ form_rest(form) }}</div>
                {{ form_errors(form) }}
            </div>
        </div>
        <div class="panel-footer">
            <input type="hidden" name="exercise" value="{{ exoID }}" />
            <button type="submit" id="button_submit" class="btn btn-primary">{{ 'create' | trans }}</button>
        </div>
    </form>
</div>

{# tiny MCE #}
{{ tinymce_init() }}

<script type="text/javascript" src="{{ asset('bundles/ujmexo/js/interactionQCM.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/ujmexo/js/editionAv.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/ujmexo/js/category_pop.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/ujmexo/js/hint.js') }}"></script>

{# functions javascript #}
{% if error is defined %}
    <script type="text/javascript">
        linkCategory('{{ path('ujm_category_new_pop') }}');
        insertStyle();
        addFormChoiceEdit('{{ 'multiple response' | trans }}', '{{ 'unique response' | trans }}', '{{ 'add' | trans }}', '{{ 'Response number' | trans }}', '{{ 'response' | trans }}', '{{ 'point' | trans }}', '{{ 'comment' | trans }}', '{{ 'expected answer' | trans }}', '{{ 'order' | trans }}', '{{ asset('bundles/ujmexo/images/ajouter_ligne.jpeg') }}', '0', '{{entity.typeQCM.id}}', '{{ 'Choice.positionForce' | trans }}', '{{ asset('bundles/ujmexo/images/delete.png') }}');
        choiceCSSEdit('{{ asset('bundles/ujmexo/images/delete.png') }}', '0');
        editionAv();
        hintCSSEdit();
        addFormHintEdit('{{ "add hint" | trans }}',  '{{ asset('bundles/ujmexo/images/ajouter_ligne.jpeg') }}');
    </script>
{% else %}
    <script type="text/javascript">
        linkCategory('{{ path('ujm_category_new_pop') }}');
        insertStyle();
        editionAv();
        addFormChoice('{{ 'multiple response' | trans }}', '{{ 'unique response' | trans }}', '{{ 'add' | trans }}', '{{ 'Response number' | trans }}', '{{ 'response' | trans }}', '{{ 'point' | trans }}', '{{ 'comment' | trans }}', '{{ 'expected answer' | trans }}', '{{ 'order' | trans }}', '{{ asset('bundles/ujmexo/images/ajouter_ligne.jpeg') }}', '{{ asset('bundles/ujmexo/images/delete.png') }}', '{{ 'Choice.positionForce' | trans }}');
        addFormHint('{{ 'add hint' | trans }}', '{{ 'hint number' | trans }}', '{{ 'hint' | trans }}', '{{ 'penalty' | trans }}', '{{ asset('bundles/ujmexo/images/ajouter_ligne.jpeg') }}');
    </script>
{% endif %}
