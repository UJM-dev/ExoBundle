{% set layout = "ClarolineCoreBundle:Workspace:layout.html.twig" %}

{% if isDesktop() %}
    {% set layout = "ClarolineCoreBundle:Desktop:layout.html.twig" %}
{% endif %}

{% extends layout %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/ujmexo/css/errorValidation.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block title %} {{ 'edit a question' | trans }} {% endblock %}

{% block section_content %}

    <div class="panel-heading">
        <h3 class="panel-title">{{'open edition'|trans}}</h3>
    </div>

    <a href="{{ path('ujm_question_index') }}">
        <i class="icon-arrow-left"></i> {{ 'back to the list' | trans }}
    </a>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{ 'open edition' | trans }}</h3>
        </div>

        <form action="{{ path('ujm_interactionopen_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>

            {% include "UJMExoBundle:Partial:questionEdit.html.twig" %}

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'response' | trans }}</h3>
                </div>

                {{ form_row(edit_form.typeopenquestion) }}

                <div id="qOpenScoreMaxLongResp">
                    <p>
                        {{ form_label(edit_form.scoreMaxLongResp) }} &nbsp;
                        {{ form_widget(edit_form.scoreMaxLongResp) }}
                    </p>
                </div>

                <div id="qOpenOrthography" style="display: none;">
                    <p>
                        {{ form_widget(edit_form.orthographyCorrect) }}
                        {{ form_label(edit_form.orthographyCorrect) }}
                    </p>
                </div>

            <!--<div id="qOpenUnit" style="display: none;">
                <p>
                    {#{ form_row(edit_form.unit) }#}
                </p>
            </div>-->

                <div id="qOpenKeyword" style="display: none;">
                    <p>
                        {{ form_row(edit_form.wordResponses) }}
                    </p>
                </div>
            </div>



            <p>
                <input type="hidden" name="exercise" value="{{ exoID }}" />
                <button type="submit" id="button_submit" class="btn btn-primary">{{ 'edit' | trans }}</button>
            </p>

            <div style="display: none;">{{ form_rest(edit_form) }}</div>
            {{ form_errors(edit_form) }}
        </form>
    </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
{# tiny MCE #}
{{ tinymce_init() }}

<script type="text/javascript" src="{{ asset('bundles/ujmexo/js/interactionOpen.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/ujmexo/js/category_pop.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/ujmexo/js/hint.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/ujmexo/js/editionAv.js') }}"></script>

<script type="text/javascript">
$(document).ready(function() {
    linkCategory('{{ path('ujm_category_new_pop') }}');
    insertStyle();
    hintCSSEdit();
    addFormHintEdit('{{ 'add hint' | trans }}',  '{{ asset('bundles/ujmexo/images/ajouter_ligne.jpeg') }}');
    editionAv();
});
</script>

{% endblock %}
