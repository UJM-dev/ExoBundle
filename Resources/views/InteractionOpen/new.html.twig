<link href="{{ asset('bundles/ujmexo/css/tableLayout.css') }}" type="text/css" rel="stylesheet"/>
<link href="{{ asset('bundles/ujmexo/css/errorValidation.css') }}" type="text/css" rel="stylesheet"/>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'open_creation' | trans({}, 'ujm_exo') }}</h3>
    </div>
    <form onsubmit="return checkFormOpen();" id="formOpen" action="{{ path('ujm_interactionopen_create') }}" method="post" {{ form_enctype(form) }}>

        <div class="panel-body">
            {% include "UJMExoBundle:Partial:question.html.twig" %}
            {% include "UJMExoBundle:Partial:interactions/open.html.twig" %}
            {% include "UJMExoBundle:Partial:model.html.twig" %}
            {% include "UJMExoBundle:Partial:cloneInterCreation.html.twig" %}
            {% include "UJMExoBundle:Partial:restform.html.twig" %}
        </div>
        <div class="panel-footer">
            <input type="hidden" name="exercise" value="{{ exoID }}" />
            <input type="hidden" name="step" value="{{ stepID }}" />
            <button type="submit" id="button_submit" class="btn btn-primary">{{ 'create' | trans({}, 'ujm_exo') }}</button>
        </div>
    </form>
</div>

<script type="text/javascript" src="{{ url('bazinga_jstranslation_js', { 'domain': 'ujm_exo' }) }}"></script>
<script type="text/javascript" src="{{ asset('bundles/ujmexo/js/interactionOpen.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/ujmexo/js/category_pop.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/ujmexo/js/hint.js') }}"></script>
{% include "UJMExoBundle:Partial:modal/confirmOneWord.html.twig" %}
{# functions javascript #}
{% if error is defined %}
    <script type="text/javascript">
       insertStyle('{{ typeOpen|raw }}', '{{ 'delete' | trans({}, 'ujm_exo') }}','{{ 'advanced_edition' | trans({}, 'ujm_exo') }}','{{ 'comment' | trans({}, 'ujm_exo') }}', '{{'key_word' | trans({}, 'ujm_exo')}}', '{{'reponse' | trans({}, 'ujm_exo')}}', '{{'numerical_response' | trans({}, 'ujm_exo')}}', '{{ 'keys_words' | trans({}, 'ujm_exo') }}' );
       openEdit(0);
       newHintEdit('{{ 'hint' | trans({}, 'ujm_exo') }}', '{{ 'penalty' | trans({}, 'ujm_exo') }}', '{{ 'hint' | trans({}, 'ujm_exo') }}', '{{ 'delete' | trans({}, 'ujm_exo') }}');
    </script>
{% else %}
    <script type="text/javascript">
        insertStyle('{{ typeOpen|raw }}', '{{ 'delete' | trans({}, 'ujm_exo') }}','{{ 'advanced_edition' | trans({}, 'ujm_exo') }}','{{ 'comment' | trans({}, 'ujm_exo') }}', '{{'key_word' | trans({}, 'ujm_exo')}}', '{{'response' | trans({}, 'ujm_exo')}}', '{{'numerical_response' | trans({}, 'ujm_exo')}}', '{{ 'keys_words' | trans({}, 'ujm_exo') }}');
        newHint('{{ 'hint' | trans({}, 'ujm_exo') }}', '{{ 'penalty' | trans({}, 'ujm_exo') }}', '{{ 'hint' | trans({}, 'ujm_exo') }}', '{{ 'delete' | trans({}, 'ujm_exo') }}');
    </script>
{% endif %}
