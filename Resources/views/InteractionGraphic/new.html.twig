<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'graphic_creation' | trans({}, 'ujm_exo') }}</h3>
    </div>

    <form name="InterGraphForm" id="InterGraphForm" onsubmit="return Check('{{ 'no_question' | trans({}, 'ujm_exo') }} ...',
        '{{ 'no_img' | trans({}, 'ujm_exo') }} !', '{{ 'no_answer_zone' | trans({}, 'ujm_exo') }} ...',
        '{{ form.question.invite.vars.id }}');" action="{{ path('ujm_interactiongraphic_create') }}" method="post" {{ form_enctype(form) }}>

        <div class="panel-body">
            {% set src = 'new' %}

            {% include "UJMExoBundle:Partial:question.html.twig" %}
            {% include "UJMExoBundle:Partial:interactions/graphic.html.twig" %}
            {% include "UJMExoBundle:Partial:model.html.twig" %}
            {% include "UJMExoBundle:Partial:cloneInterCreation.html.twig" %}
            {% include "UJMExoBundle:Partial:restform.html.twig" %}
        </div>

        <div class="panel-footer">
            <input type="hidden" name="exercise" value="{{ exoID }}" />
            <input type="hidden" name="step" value="{{ stepID }}" />
            <button type="submit"  id="button_submit" class="btn btn-primary">{{ 'create' | trans({}, 'ujm_exo') }}</button>
        </div>
    </form>
</div>
<script type="text/javascript" src="{{ asset('bundles/ujmexo/js/ext/background-check.min.js') }}"></script>
