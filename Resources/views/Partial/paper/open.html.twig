{% if interactionToDisplayed.typeopenquestion == 'long' %}
    <textarea name="interOpen" class="claroline-tiny-mce hide" data-theme="advanced" data-resource-picker="off" data-before-unload="off">
        {{ response }}
    </textarea>
{% endif %}

{% if interactionToDisplayed.typeopenquestion == 'oneWord' %}
    <input type="text" name='interOpen' size='30' value="{{ response }}"/>
{% endif %}

{% if interactionToDisplayed.typeopenquestion == 'short' %}
    <textarea name="interOpen">{{ response }}</textarea>
{% endif %}
