<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'title' | trans }}</h3>
    </div>
    <div class="panel-body">
        <div class="form-group row">
            {{ form_label(form.interaction.question.title) }}
            <div class="col-md-9">{{ form_widget(form.interaction.question.title) }}</div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'category' | trans }}</h3>
    </div>
    <div class="panel-body">
        <div class="form-group row">
            <label class="control-label col-md-3">{{ 'choose' | trans }}</label>
            <div class="col-md-9">{{ form_widget(form.interaction.question.category) }}</div>
        </div>
    </div>
    <div class="panel-footer">
        <a class="btn btn-primary" id="lien_category_alter" onclick="show();"><i class="icon-pencil"></i> &nbsp;{{ 'alter category' | trans }}</a>
        <a class="btn btn-default" id="lien_category"><i class="icon-plus"></i> &nbsp;{{ 'create a new category' | trans }}</a>
        <a id="linkedCategory" style="display: none;" class="btn btn-default" id="lien_category_drop" onclick="dropCategory();"><i class="icon-trash"></i> {{ 'drop category' | trans }}</a>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'description' | trans }}</h3>
    </div>
    <div class="panel-body">
        <a class="btn btn-primary" data-toggle="collapse" data-target="#collepsedescription">
            <i class="icon-pencil"></i> {{ 'Question.description' | trans }}
        </a>
    </div>
    <div id="collepsedescription" class="list-group collapse">
        <div class="list-group-item">{{ form_widget(form.interaction.question.description) }}</div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'model' | trans }}</h3>
    </div>
    <div class="panel-body">
        <div class="form-group row">
            {{ form_label(form.interaction.question.model) }}
            <div class="col-md-3">{{ form_widget(form.interaction.question.model) }}</div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'question' | trans }}</h3>
    </div>
    <div class="panel-body">
        {{ form_widget(form.interaction.invite) }}
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'comment' | trans }}</h3>
    </div>
    <div class="panel-body">
        <a class="btn btn-primary" data-toggle="collapse" data-target="#collepseinteraction">
            <i class="icon-pencil"></i> {{ 'Interaction.feedback' | trans }}
        </a>
    </div>
    <div id="collepseinteraction" class="list-group collapse">
        <div class="list-group-item">{{ form_widget(form.interaction.feedBack) }}</div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'hints' | trans }}</h3>
    </div>
    <div class="panel-body">
        {{ form_widget(form.interaction.hints) }}
    </div>
</div>

<div id="popupEA">
    <div id="popupContainer" class="hiddenCat">
        <a id="close" class="hiddenCat" title="close popup">{{ 'close' | trans }}</a>
        <h1>{{ 'response' | trans }}</h1><div id="div_input_popup">
            <textarea class="form-control" id="input_popup" class="tinymce" data-theme="medium"></textarea>
        </div>
    </div>
    <div id="overlayEffect"> </div>
</div>

<div id="listeCategory">
    <div id="popupCategory" class="hiddenCat">
        <a id="closeCategory" class="hiddenCat" title="close popup">{{ 'close' | trans }}</a>
        <h1>{{ 'create a new category' | trans }}</h1>
        <div id="div_input_category"></div>
    </div>
    <div id="overlayEffect_cat"></div>
</div>

<div id="alterCategory" style="position: fixed; left: 40%; top: 20%; background-color: #ccf; border: #000 thin solid;
    width: 400px; height: 200px; display: none; opacity: 0.95; text-align: center;">

    <a href="#" onclick="hide();"><i class="icon-remove"></i> {{ 'close' | trans }}&nbsp;</a>

    <h3>{{ 'alter category' | trans }}</h3>

    <p>{{ 'newCategoryName' | trans }} ?</p>
    <input class="form-control" type="text" id='newlabel' name='newlabel'/>
    <button id="updateSubmit" type="button" class="btn btn-primary">{{ 'change' | trans }} !</button>

    <input type="hidden" id="pathAlter" value="{{ path('ujm_category_alter') }}"/>
    <input type="hidden" id="pathDrop" value="{{ path('ujm_category_drop') }}"/>
</div>

<script type="text/javascript">
    var translations = {
        'alreadyExist' : '{{ 'alreadyExist'|trans }}',
        'wrongName' : '{{ 'wrongName'|trans }}'
    };
</script>

<script type="text/javascript" src="{{ asset('bundles/ujmexo/js/allQuestionsType.js') }}"></script>
