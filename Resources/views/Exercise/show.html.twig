{% set layout = "ClarolineCoreBundle:Workspace:layout.html.twig" %}

{% if isDesktop() %}
    {% set layout = "ClarolineCoreBundle:Desktop:layout.html.twig" %}
{% endif %}

{% extends layout %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/ujmexo/css/tableLayout.css') }}" type="text/css" rel="stylesheet"/>
{% endblock %}

{% block title %} {{ 'exercise' | trans({}, 'ujm_exo') }} : {{ entity.title }} {% endblock %}

{% block section_content %}

    <div class="panel-heading">
        <h3 class="panel-title">{{ 'exercise'|trans({}, 'ujm_exo') }} : {{ entity.title }}</h3>
    </div>
    <div class="panel-body">
        {% if isDesktop() %}
            <a class="btn btn-primary" href="{{ path('claro_desktop_open_tool', { 'toolName': 'resource_manager', 'workspaceId': workspace.getId() }) ~ "#resources/" ~ _resource.getResourceNode().getParent().getId() }}">
                <i class="fa fa-arrow-left"></i> {{ 'back' | trans({}, 'ujm_exo') }}
            </a>
        {% else %}
            <a class="btn btn-primary" href="{{ path('claro_workspace_open_tool', { 'toolName': 'resource_manager', 'workspaceId': workspace.getId() }) ~ "#resources/" ~ _resource.getResourceNode().getParent().getId() }}">
                <i class="fa fa-arrow-left"></i> {{ 'back' | trans({}, 'ujm_exo') }}
            </a>
        {% endif %}
    </div>

    <div id='divPublish' class="alert alert-info" style='display:none'>
        {% if qtiError is defined %}
                <div class="alert alert-warning">{{ qtiError }}</div>
            {% endif %}
        {% if is_granted('ADMINISTRATE', _resource) %}
            {{ 'info_exercise_no_puplished'|trans({}, 'ujm_exo') }} :
            <a id="btPublish" class="btn btn-primary" onclick="publish('{{ path('ujm_exercise_publish') }}', {{ entity.id }})">
                <i class="fa fa-check"></i> {{ 'publish' | trans({}, 'ujm_exo') }}
            </a>
        {% else %}
            {{ 'info_exercise_no_puplished2'|trans({}, 'ujm_exo') }}
        {% endif %}
    </div>

    <div class="list-group">
        <div class="list-group-item">
            <table class="record_properties table table-striped table-bordered table-condensed">
                <tbody>
                    <tr>
                        <th class="classic">{{ 'title' | trans({}, 'ujm_exo') }}</th>
                        <td class="classic">{{ entity.title }}</td>
                    </tr>
                    <tr>
                        <th class="classic">{{ 'description' | trans({}, 'ujm_exo') }}</th>
                        <td class="classic">
                            {% if entity.description is not empty %}
                                {{ entity.description|raw }}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th class="classic">{{ 'start_date' | trans({}, 'ujm_exo') }}</th>
                        <td class="classic">{{ entity.startdate|date('d/m/Y \\- H\\hi\\ms\\s') }}</td>
                    </tr>
                    <tr>
                        <th class="classic">{{ 'use_date_end' | trans({}, 'ujm_exo') }}</th>
                        <td class="classic">
                            {% if entity.useDateEnd == 0 %}
                                <i class="fa fa-times-circle"></i>
                            {% else %}
                                <i class="fa fa-check-circle"></i>
                            {% endif %}
                        </td>
                    </tr>
                    {% if entity.useDateEnd != 0 %}
                        <tr>
                            <th class="classic">{{ 'end_date' | trans({}, 'ujm_exo') }}</th>
                            <td class="classic">{{ entity.enddate|date('d/m/Y \\- H\\hi\\ms\\s') }}</td>
                        </tr>
                    {% endif %}

                    {% if is_granted('ADMINISTRATE', _resource) %}
                        <tr class="hiddencells">
                            <th class="classic">{{ 'random_questions' | trans({}, 'ujm_exo') }}</th>
                            <td class="classic">
                                {% if entity.shuffle == 0 %}
                                    <i class="fa fa-times-circle"></i>
                                {% else %}
                                    <i class="fa fa-check-circle"></i>
                                {% endif %}
                            </td>
                        </tr>
                        <tr class="hiddencells">
                            <th class="classic">{{ 'number_questions_draw' | trans({}, 'ujm_exo') }}</th>
                            <td class="classic">
                                {% if entity.nbQuestion != 0 %}
                                    {{ entity.nbQuestion }}
                                {% else %}
                                    {{ 'all_question'|trans({}, 'ujm_exo') }}
                                {% endif %}
                            </td>
                        </tr>
                       {#---not operational---#}
                            {#<tr class="hiddencells">
                            <th class="classic">{{ 'keep_same_question' | trans({}, 'ujm_exo') }}</th>
                            <td class="classic">
                                {% if entity.keepSameQuestion == 0 %}
                                    <i class="fa fa-times-circle"></i>
                                {% else %}
                                    <i class="fa fa-check-circle"></i>
                                {% endif %}
                            </td> #}
                        </tr>
                        <tr class="hiddencells">
                            <th class="classic">{{ 'creation_date' | trans({}, 'ujm_exo') }}</th>
                            <td class="classic">{{ entity.dateCreate|date('d/m/Y \\- H\\hi\\ms\\s') }}</td>
                        </tr>
                        <tr style="display: none;">
                            <th class="classic">{{ 'duration' | trans({}, 'ujm_exo') }}</th>
                            <td class="classic">
                                {% if entity.duration != 0 %}
                                    {{ entity.duration }}
                                {% else %}
                                    {{ 'none'|trans({}, 'ujm_exo') }}
                                {% endif %}
                            </td>
                        </tr>
                        <tr style="display: none;">
                            <th class="classic">{{ 'print_paper' | trans({}, 'ujm_exo') }}</th>
                            <td class="classic">
                                {% if entity.doprint == 0 %}
                                    <i class="fa fa-times-circle"></i>
                                {% else %}
                                    <i class="fa fa-check-circle"></i>
                                {% endif %}
                            </td>
                        </tr>
                        <tr class="hiddencells">
                            <th class="classic">{{ 'maximum_tries' | trans({}, 'ujm_exo') }}</th>
                            <td class="classic">
                                {% if entity.maxAttempts != 0 %}
                                    {{ entity.maxAttempts }}
                                {% else %}
                                    {{ 'infiny'|trans({}, 'ujm_exo') }}
                                {% endif %}
                            </td>
                        </tr>
                        <tr class="hiddencells">
                            <th class="classic">{{ 'availability_of_correction' | trans({}, 'ujm_exo') }}</th>
                            <td class="classic">
                                {% if(entity.correctionMode == 1) %}
                                    {{ 'at_the_end_of_assessment' | trans({}, 'ujm_exo') }}
                                {% elseif (entity.correctionMode == 2) %}
                                    {{ 'after_the_last_attempt' | trans({}, 'ujm_exo') }}
                                {% elseif (entity.correctionMode == 3) %}
                                    {{ 'from' | trans({}, 'ujm_exo') }} : {{ entity.dateCorrection|date('d/m/Y \\- H\\hi\\ms\\s') }}
                                {% elseif (entity.correctionMode == 4) %}
                                    {{ 'never' | trans({}, 'ujm_exo') }}
                                {% endif %}
                            </td>
                        </tr>
                        <tr class="hiddencells">
                            <th class="classic">{{ 'availability_of_score' | trans({}, 'ujm_exo') }}</th>
                            <td class="classic">
                                {% if(entity.markMode == 1) %}
                                    {{ 'at_the_same_time_that_the_correction' | trans({}, 'ujm_exo') }}
                                {% else %}
                                    {{ 'at_the_end_of_assessment' | trans({}, 'ujm_exo') }}
                                {% endif %}
                            </td>
                        </tr>
                        <tr class="hiddencells">
                            <th class="classic">{{ 'test_exit' | trans({}, 'ujm_exo') }}</th>
                            <td class="classic">
                                {% if  entity.dispButtonInterrupt == 0 %}
                                    <i class="fa fa-times-circle"></i>
                                {% else %}
                                    <i class="fa fa-check-circle"></i>
                                {% endif %}
                            </td>
                        </tr>
                        <tr style="display: none;">
                            <th class="classic">{{ 'lock_attempt' | trans({}, 'ujm_exo') }}</th>
                            <td class="classic">
                                {% if  entity.lockAttempt == 0 %}
                                    <i class="fa fa-times-circle"></i>
                                {% else %}
                                    <i class="fa fa-check-circle"></i>
                                {% endif %}
                            </td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
            {% if is_granted('ADMINISTRATE', _resource) %}
                <button type="button" id="more" class="btn btn-primary" onclick="moreInformation();">
                    <i class="fa fa-plus"></i> {{ 'more_info' | trans({}, 'ujm_exo') }}
                </button>
                <button type="button" id="less" class="btn btn-primary" onclick="less_information();">
                    <i class="fa fa-minus"></i> {{ 'less_information' | trans({}, 'ujm_exo') }}
                </button>
            {% endif %}
        </div>
        <div class="text-center panel-footer">
            {% if allowToCompose == 1 and nbQuestion > 0 %}
                {% if nbUserPaper == 0 %}
                    <a class="btn btn-primary" href="{{ path('ujm_exercise_paper', { 'id': entity.id }) }}">
                        <i class="fa fa-check-square-o"></i> {{ 'compose' | trans({}, 'ujm_exo') }}
                    </a>
                {% else %}
                    <a class="btn btn-primary" href="{{ path('ujm_paper_list', { 'exoID': entity.id }) }}">
                        <i class="fa fa-check-square-o"></i> {{ 'compose' | trans({}, 'ujm_exo') }}
                    </a>
                {% endif %}
            {% endif %}
            {% if is_granted('ADMINISTRATE', _resource) %}
                <a class="btn btn-primary" href="{{ path('ujm_exercise_edit', { 'id': entity.id }) }}">
                    <i class="fa fa-pencil"></i> {{ 'parameters' | trans({}, 'ujm_exo') }}
                </a>
                <a class="btn btn-primary" href="{{ path('ujm_exercise_questions', { 'id': entity.id }) }} " >
                    <i class="fa fa-question"></i> {{ 'questions' | trans({}, 'ujm_exo') }}
                </a>
                <span id='spanUnpublish' style='display:none'><a id="btUnpublish" class="btn btn-primary" onclick="unpublish('{{ path('ujm_exercise_unpublish') }}', {{ entity.id }})">
                    <i class="fa fa-times"></i> {{ 'unpublish' | trans({}, 'ujm_exo') }}
                    </a></span>
            {% endif %}
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a class="btn btn-primary" href="{{ path('ujm_paper_list', { 'exoID': entity.id }) }}">
                    <i class="fa fa-list"></i> {{ 'result' | trans({}, 'ujm_exo') }}
                </a>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript" src="{{ asset('bundles/ujmexo/js/exercise.js') }}"></script>

        {% if published == false %}
            <script language="JavaScript">displayBtPublish();</script>
        {% else %}
            <script language="JavaScript">hideBtPublish();</script>
        {% endif %}

        {% if nbPapers == 0 and published == true %}
             <script language="JavaScript">displayBtUnpublish();</script>
        {% else %}
             <script language="JavaScript">hideBtUnpublish();</script>
        {% endif %}

    <script language="JavaScript">
        $('#less').css({"display" : "none"});
        lessInformation();

        function moreInformation() {
            $('.hiddencells').show();
            $('#less').css({"display" : "block"});
            $('#more').css({"display" : "none"});
        }

        function lessInformation() {
            $('.hiddencells').hide();
            $('#more').css({"display" : "block"});
            $('#less').css({"display" : "none"});
        }
    </script>
{% endblock %}
